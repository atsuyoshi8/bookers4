<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <td><% if @book.user == current_user %>
                  <%= link_to "Show", book_path(@book) %>
                  <% end %></td>
  <td><%= link_to books_path do %>
　     Back
　    <% end %>
　</td>
      <% end %>